<% form_action = action == :new ? bands_url : band_url(band.id) %>
<% submit_value = action == :new ? "Create band" : "Update" %>


<% if flash[:errors] %>
  <%= render "shared/errors", errors: flash[:errors] %>
<% end %>

<form action="<%= form_action %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>
  
  <%= form_authenticity %>
  <label for="band-name">Band Name:</label>
  <input type="text" name="band[name]" id="band-name" value="<%= band.name %>">
  <input type="submit" value="<%= submit_value %>">
</form>